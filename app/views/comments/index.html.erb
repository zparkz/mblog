<h1>Comments</h1>

<table>
  <tr>
    <th>Body</th>
    <th>Post</th>
    <th>User</th>
    <th>Created at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.body %></td>
    <td><%= comment.post_id %></td>
    <td><%= comment.user_id %></td>
    <td><%= comment.publish_date %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_post_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comment', new_post_comment_path, :post_id => @comment.post_id %>

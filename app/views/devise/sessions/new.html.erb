<div class="span offset2">
<h2>Sign in</h2>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-verticle' }) do |f| %>
  <%= f.input :email, :autofocus => true %>
  <%= f.input :password %>
  <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
  <p>
  <h2><%= link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook) %></h2>
<% end %>
<%= render "devise/shared/links" %>
</div>
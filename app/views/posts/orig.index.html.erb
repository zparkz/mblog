<% @posts.each do |post|%>
  <div class="row">
    <%# MOD KIMADA 4/13/2013 Add Link to Show Post %>
    <div class="span8"><h2><%=link_to post.title, post_path(:id => post.id) %></h2></div>
    <div class="span4"><h3><%= link_to post.publish_date, :format => :long %></h3></div>
  </div>
  <div class="row">
    <div class="span8">Author: <%= link_to post.user.name, root_path(:user => post.user.id) %></div>
    <div class="span4">Categories:
      <% post.categories.each do |cat| %>
        <%= link_to cat.name, root_path(:cat => cat.id) %>
      <% end %>
    </div>
  </div>
  <br/>
  <blockquote><%= post.body %></blockquote>

    <% if current_user && (current_user.has_role?(:admin) || current_user.id==post.user_id) %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")), 
                    edit_post_path(post), 
                    :class => 'btn btn-mini' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    post_path(post),
                    :method => :delete,
                    :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                    :class => 'btn btn-mini btn-danger' %>
  <% end %>
  <hr />
<% end %>

<%- if current_user %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
                   new_post_path,
                    :class => 'btn btn-primary' %>
<% end %>                    